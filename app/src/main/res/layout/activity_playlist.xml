<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText android:id="@+id/etArtist" android:hint="Artist"/>
    <EditText android:id="@+id/etSong" android:hint="Song"/>
    <RatingBar android:id="@+id/ratingBar" android:numStars="5" android:stepSize="1.0"/>
    <EditText android:id="@+id/etComment" android:hint="Comment"/>
    <Button android:id="@+id/btnAdd" android:text="Add to Playlist"/>
    <Button android:id="@+id/btnViewRatings" android:text="View Ratings"/>
    <Button android:id="@+id/btnRate" android:text="Rate a Song"/>
</LinearLayout>